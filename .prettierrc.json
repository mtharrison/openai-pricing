{
  "$schema": "http://json.schemastore.org/prettierrc",
  "overrides": [
    {
      "files": ".nvmrc",
      "options": {
        "parser": "yaml"
      }
    }
  ],
  "plugins": ["prettier-plugin-curly", "prettier-plugin-packagejson"],
  "useTabs": false,
  "tabWidth": 2,
  "trailingComma": "all",
  "singleQuote": true
}
